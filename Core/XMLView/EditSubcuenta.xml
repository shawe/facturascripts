<view>
    <columns>
        <group name="primary-data" numcolumns="12">
            <column name="id" order="100" display="none">
                <widget type="text" fieldname="idsubcuenta" />
            </column>
            <column name="subaccount" numcolumns="2" order="110">
                <widget type="text" fieldname="codsubcuenta" readonly="true" />
            </column>
            <column name="description" numcolumns="7" order="120">
                <widget type="text" fieldname="descripcion" required="true" />
            </column>
            <column name="special-account-id" numcolumns="3" order="130">
                <widget type="select" fieldname="codcuentaesp" onclick="EditCuentaEspecial">
                    <values source="cuentasesp" fieldcode="codcuentaesp" fieldtitle="descripcion" />
                </widget>
            </column>
        </group>
        <group name="seccondary-data" numcolumns="12">
            <column name="account" numcolumns="3" order="100">
                <widget type="select" fieldname="codcuenta" readonly="true">
                    <values source="cuentas" fieldcode="codcuenta" fieldtitle="descripcion" />
                </widget>
            </column>
            <column name="fiscal-exercise" numcolumns="3" order="110">
                <widget type="select" readonly="true" fieldname="codejercicio">
                    <values source="ejercicios" fieldcode="codejercicio" fieldtitle="nombre" />
                </widget>
            </column>
            <column name="currency" numcolumns="3" order="120">
                <widget type="select" fieldname="coddivisa" required="true">
                    <values source="divisas" fieldcode="coddivisa" fieldtitle="descripcion" />
                </widget>
            </column>
            <column name="taxes" numcolumns="3" order="130">
                <widget type="select" fieldname="codimpuesto" required="true">
                    <values source="impuestos" fieldcode="codimpuesto" fieldtitle="descripcion" />
                </widget>
            </column>
        </group>
        <group name="saldos-accounts" numcolumns="12">
            <column name="debit" numcolumns="4" order="100">
                <widget type="money" fieldname="debe" readonly="true" />
            </column>
            <column name="credit" numcolumns="4" order="110">
                <widget type="money" fieldname="haber" readonly="true" />
            </column>
            <column name="balance" numcolumns="4" order="120">
                <widget type="money" fieldname="saldo" readonly="true" />
            </column>
        </group>
    </columns>
</view>
